@model IEnumerable<ProyectoFinalDraft.Models.Cita>

@{
    ViewData["Title"] = "Index";
    }

<h1>Citas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.Detalle)</th>
            <th>@Html.DisplayNameFor(model => model.EstadoCita)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>Servicios</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Fecha</td>
                <td>@item.Detalle</td>
                <td>@item.EstadoCita.Nombre</td>
                <td>@item.Usuario.NombreCompleto</td>

                <!-- Lista de servicios -->
                <td>
                    @foreach (var cs in item.CitaServicios)
                        {
                        <span>@cs.Servicio.Nombre</span>
                
                        <br />
                        }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.CitaId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.CitaId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.CitaId">Eliminar</a>
                </td>
            </tr>
            }
    </tbody>
</table>
