<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoFinalDraft</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinalDraft.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ProyectoFinalDraft
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <!-- PUBLICO -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                            <!-- TODOS LOS USUARIOS LOGUEADOS -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Citas" asp-action="Index">
                                    Citas
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Facturas" asp-action="Index">
                                    Facturas
                                </a>
                            </li>
                            }

                        @if (User.IsInRole("Admin") || User.IsInRole("Barbero"))
                            {
                            <!-- ADMIN + BARBERO -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Servicios" asp-action="Index">
                                    Servicios
                                </a>
                            </li>
                            }

                        @if (User.IsInRole("Admin"))
                            {
                            <!-- SOLO ADMIN -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="EstadoCitas" asp-action="Index">
                                    EstadoCitas
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">
                                    Roles
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">
                                    Usuarios
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Promociones" asp-action="Index">
                                    Promociones
                                </a>
                            </li>
                            }

                        @if (User.IsInRole("Cliente"))
                            {
                            <!-- SOLO CLIENTE -->
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Promociones"
                                   asp-action="MisPromociones">
                                    Mis promociones
                                </a>
                            </li>
                            }

                    </ul>

                    <!-- LOGIN / LOGOUT -->
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProyectoFinalDraft -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
