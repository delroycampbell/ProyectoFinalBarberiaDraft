@model IEnumerable<ProyectoFinalDraft.Models.Factura>

@{
    ViewData["Title"] = "Index";
    }

<h1>Facturas</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Barbero"))
    {
    <p>
        <a asp-action="Create">Crear Nueva</a>
    </p>
    }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cita.CitaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Correo)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.FacturaId">Detalles</a>
                </td>
            </tr>
            }
    </tbody>
</table>
