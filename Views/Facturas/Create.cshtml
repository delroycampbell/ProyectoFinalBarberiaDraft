@model ProyectoFinalDraft.Models.Factura

@{
    ViewData["Title"] = "Crear Factura";
    }

<h1>Crear Factura</h1>

<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- CitaId -->
            <div class="form-group mb-3">
                <label asp-for="CitaId" class="control-label">Cita</label>
                <select asp-for="CitaId" class="form-control" asp-items="ViewBag.CitaId" id="citaSelect"></select>
            </div>

            <!-- UsuarioId (solo lectura) -->
            <div class="form-group mb-3">
                <input class="form-control" id="usuarioNombreInput" readonly />
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <input asp-for="UsuarioId" type="hidden" id="usuarioInput" />
            </div>

            <!-- Fecha (solo lectura) -->
            <div class="form-group mb-3">
                <label asp-for="Fecha" class="control-label">Fecha</label>
                <input asp-for="Fecha" class="form-control" id="fechaInput" readonly />
            </div>

            <!-- Total (solo lectura) -->
            <div class="form-group mb-3">
                <label asp-for="Total" class="control-label">Total</label>
                <input asp-for="Total" class="form-control" id="totalInput" readonly />
            </div>
            <!-- Detalle (opcional) -->
            <div class="form-group mb-3">
                <label asp-for="Detalle" class="control-label">Detalle</label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>


            <!-- Botón crear -->
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

    @section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

    <script>
        function cargarDatosFactura() {
            const select = document.getElementById("citaSelect");
            const citaId = select.value;

            if (!citaId) return;

            fetch(`/Facturas/GetFacturaDatos?citaId=${citaId}`)
                .then(res => res.json())
                .then(data => {
                    document.getElementById("usuarioInput").value = data.usuarioId;
                    document.getElementById("usuarioNombreInput").value = data.usuarioNombre;
                    document.getElementById("totalInput").value = data.total;
                    document.getElementById("fechaInput").value = data.fecha;
                });
        }

        // Cuando el usuario cambia la cita
        document.getElementById("citaSelect").addEventListener("change", cargarDatosFactura);

        // Cargar automáticamente si solo hay una cita
        window.addEventListener("DOMContentLoaded", function () {
            const select = document.getElementById("citaSelect");

            // CASO 1: solo una opción real
            if (select.options.length === 1) {
                cargarDatosFactura();
                return;
            }

            // CASO 2: dos opciones pero la primera NO es vacía
            if (select.options.length === 2 && select.options[0].value !== "") {
                // Selecciona automáticamente la primera cita
                select.selectedIndex = 0;
                cargarDatosFactura();
                return;
            }
        });
    </script>
    }

