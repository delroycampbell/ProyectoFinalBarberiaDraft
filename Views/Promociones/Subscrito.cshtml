@model IEnumerable<ProyectoFinalDraft.Models.Promocion>

@{
    ViewData["Title"] = "Promociones disponibles";
    }

<h1>Promociones disponibles</h1>

<h4>Estas promociones están activas y disponibles para ti</h4>
<hr />

<div class="row">
    <div class="col-md-8">

        @if (!Model.Any())
            {
            <div class="alert alert-info">
                No hay promociones activas en este momento.
            </div>
            }
        else
            {
            <ul class="list-group">
                @foreach (var promo in Model)
                    {
                    <li class="list-group-item mb-3">

                        <h4 class="mb-1">@promo.Titulo</h4>

                        <p class="mb-1">@promo.Descripcion</p>

                        <p class="mb-1">
                            <strong>Descuento:</strong> @promo.Descuento %
                        </p>

                        <p class="mb-1">
                            <strong>Válida desde:</strong> @promo.FechaInicio.ToShortDateString()
                            <br />
                            <strong>Hasta:</strong> @promo.FechaFin.ToShortDateString()
                        </p>

                        @if (promo.ServicioId != null)
                            {
                            <p class="text-muted">
                                <strong>Servicio relacionado ID:</strong> @promo.ServicioId
                            </p>
                            }

                    </li>
                    }
            </ul>
            }

    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
